<p id="notice"><%= notice %></p>

<div class="card shadow">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h2>Agencias</h2>
      </div>
      <div class="align-self-end">
        <%= link_to 'Nuevo', new_admin_agency_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

<div class="card shadow">
  <div class="card-body">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @agencies.each do |agency| %>
          <tr>
            <td><%= agency.name %></td>
            <td><%= link_to 'Ver', admin_agency_path(agency) %></td>
            <td><%= link_to 'Editar', edit_admin_agency_path(agency) %></td>
            <td><%= link_to 'Eliminar', admin_agency_path(agency), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>


