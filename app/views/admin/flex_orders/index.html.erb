<h3>Ordenes</h3>

<%= simple_form_for :query, url: admin_flex_orders_path, method: :get do |form| %>
  <div class="row">
    <div class="col">
      <%= form.input :from, label: 'Desde', input_html: { class: 'datepicker' } %>
    </div>
    <div class="col">
      <%= form.input :to, label: 'Hasta', input_html: { class: 'datepicker' } %>
    </div>
    <div class="col">
      <%= form.submit 'Filtar' %>
    </div>
  </div>
<% end %>

<% if @flex_orders %>
  <table class="table">
    <tr>
      <th>Usuario</th>
      <th>Email</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Estado</th>
      <th>Creado</th>
    </tr>
    <% @flex_orders.each do |flex_order| %>
      <tr>
        <td><%= flex_order.user.name %></td>
        <td><%= flex_order.user.email %></td>
        <td><%= flex_order.amount %></td>
        <td><%= flex_order.amount.to_i * flex_order.unit_price.to_i %></td>
        <td><%= flex_order.status %></td>
        <td><%= l(flex_order.created_at, format: '%d-%m-%Y') %></td>
      </tr>
    <% end %>
  </table>
<% end %>
