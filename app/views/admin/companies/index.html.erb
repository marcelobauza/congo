<p id="notice"><%= notice %></p>

<div class="card shadow">
  <div class="card-body pb-1">
    <div class="form-row">
      <div class="col-md-2">
        <h2>Empresas</h2>
      </div>
    </div>
  </div>
</div>

<div class="card shadow">
  <div class="card-body">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th><%= Company.human_attribute_name :name %></th>
          <th><%= Company.human_attribute_name :projects_downloads %></th>
          <th><%= Company.human_attribute_name :transactions_downloads %></th>
          <th><%= Company.human_attribute_name :future_projects_downloads %></th>
          <th colspan="3" class="text-center">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.projects_downloads %></td>
            <td><%= company.transactions_downloads %></td>
            <td><%= company.future_projects_downloads %></td>
            <td class="text-center"><%= link_to admin_companies_export_csv_downloads_by_company_path(id: company.id, locale: :es) do %> <i class="fas fa-download"></i> <%end%></td>
            <td class="text-center"><%= link_to edit_admin_company_path(company) do %> <i class="fas fa-edit"></i> <%end%></td>
            <td class="text-center"><%= link_to admin_company_path(company), method: :delete, data: { confirm: '¿Está seguro?' } do %> <i class="fas fa-trash-alt " title="Eliminar"></i> <%end%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Company', new_admin_company_path() %>
  </div>
</div>
