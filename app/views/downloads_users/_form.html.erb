<div class="modal fade" id="download-modal" tabindex="-1" role="dialog" aria-labelledby="download-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="download-modal-label">Descarga XLS</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= simple_form_for(@donwloads_users, remote: true) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="modal-body">
          <div class="form-group row">
            <%= f.label :title, "TÃ­tulo", class: "col-md-3 text-right" %>
            <div class="col-md-9">
              <%= f.input :title, label: false, :input_html => { :class => 'form-control' } %>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.button :submit, :class => 'btn btn-primary', value: "Guardar" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
