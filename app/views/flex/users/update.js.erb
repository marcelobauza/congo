// Levanta los posibles errores
var errors = '<%= raw @errorMessage %>';

// Sino hay errores actualiza y elimina el modal
if (errors == '{}') {

  // Elimina el modal
  $("#modal-flex-account").remove();
  $('.modal-backdrop').remove();

// Si hay errores advierte al usuario
} else {

  $("#error_item").remove()
  $("#users_error").append(
    $('<p>', {
      'id': 'error_item',
      'text': errors
    })
  )

}
