<div class="form-signin">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <center>
      <%=image_tag "biens_sign_up.png", class: "mb-4", height:"200" %>
    </center>

    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: "¿Cómo quieres llamarte?" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: "¿Cuál es tu e-mail?" %>
    </div>

    <div class="form-group">
      <%= f.phone_field :phone, autocomplete: "email", class: 'form-control', placeholder: "¿Cuál es tu teléfono?" %>
    </div>

    <div class="form-group">
      <div class="d-flex justify-content-between flex_singup_black">
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> Caracteres mínimos)
        <% end %>
        <a data-action-show-password class="far fa-eye-slash"></a>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Ingresa una contraseña", data: { show_password: true } %>
    </div>


    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Repite la contraseña anterior" %>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-lg btn-primary btn-block flex_button_sign_up', value: "Regístrate" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>

</div>
