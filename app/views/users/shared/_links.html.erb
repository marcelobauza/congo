<%- if controller_name != 'sessions' %>
  <%= link_to "Inicia sesión", new_session_path(resource_name), class: 'flex_singup_black' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' && params['module'] == 'flex' %>
  <%= link_to "Regístrate", new_registration_path(resource_name), class: "btn btn-custom btn-lg btn-block flex_singup_black flex_button_sign_in_reg", role: 'button' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'flex_singup_black' %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "¿No recibiste el e-mail de confirmación?", new_confirmation_path(resource_name), class: 'flex_singup_black' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'flex_singup_black' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'flex_singup_black' %><br />
  <% end %>
<% end %>
